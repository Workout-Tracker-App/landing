---
import Logo from "./Logo.astro";
import googlePlay from "../assets/google-play-badge.svg";
import appStore from "../assets/apple-store-badge.svg";
import appImage from "../../public/image.png";
---

<div class="relative w-full pt-28 md:pt-20 xl:pt-24 mb-8">
  <!-- max-w-[100vw] min-h-screen -->
  <div
    class="z-10 m-auto flex flex-col md:flex-row items-center justify-between max-w-6xl gap-10 px-6 md:px-12"
  >
    <!-- Text Content -->
    <div class="text-center md:text-left max-w-lg">
      <p
        class="text-4xl md:text-5xl xl:text-6xl font-bold text-white leading-tight"
      >
        <span class="text">Guarda,</span> comparte y analiza tus entrenamientos
      </p>
      <p class="mt-4 text-lg md:text-xl text-white/80">
        Track your workouts, share your progress, and stay motivated with your
        fitness community.
      </p>

      <!-- Buttons -->
      <!-- Buttons -->
      <div class="mt-6 flex flex-col sm:flex-row gap-4">
        <a
          href="https://play.google.com/store/apps/details?id=your.app.id"
          class="rounded-lg"
        >
          <img src={googlePlay.src} alt="Get it on Google Play" width="200" />
        </a>
        <a href="https://apps.apple.com/es/app/your-app" class="rounded-lg">
          <img src={appStore.src} alt="Get it on Google Play" width="200" />
        </a>
      </div>
      <!--
      <div class="mt-6 flex flex-col sm:flex-row gap-4">
        <a href="#" class="px-6 py-3 bg-[#DD671D] hover:bg-[#BB580F] text-white font-semibold rounded-lg shadow-lg transition-all">
          Get Started
        </a>
        <a href="#" class="px-6 py-3 border border-white hover:bg-white hover:text-black text-white font-semibold rounded-lg shadow-lg transition-all">
          Learn More
        </a>
      </div>
-->
    </div>

    <!-- Image -->
    <div class="flex justify-center w-full md:w-auto mt-10 md:mt-0">
      <img width="320" src={appImage.src} alt="App Screenshot" />
    </div>
  </div>
</div>
