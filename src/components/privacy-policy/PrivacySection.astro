---
// PrivacySection.astro
const { sectionTitle, content } = Astro.props;

// Split content into paragraphs by double line breaks
const paragraphs = content.split('\n\n');
---

<section class="mt-6">
  <h2 class="text-2xl font-semibold text-white">{sectionTitle}</h2>
  <div class="mt-4 space-y-4">
    {paragraphs.map((paragraph: unknown) => (
      <p class="text-lg text-white/80">{paragraph}</p>
    ))}
  </div>
</section>
